# Control Flow Test - Widow Language
print("=== CONTROL FLOW TEST ===")

# Test if statement
print("1. Testing if statement:")
x = 10
if x > 5:
    print("x is greater than 5")

if x < 5:
    print("This should not print")
else:
    print("x is not less than 5")

# Test if-elif-else
print("2. Testing if-elif-else:")
score = 85
if score >= 90:
    print("Grade: A")
elif score >= 80:
    print("Grade: B")
elif score >= 70:
    print("Grade: C")
else:
    print("Grade: F")

# Test for loop with range (using .. syntax)
print("3. Testing for loop with range:")
for 1..5:
    print("Range iteration")

# Test for loop with array
print("4. Testing for loop with array:")
fruits = ["apple", "banana", "orange"]
for fruit in fruits:
    print("Fruit:")
    print(fruit)

# Test condition-based loop (while-style)
print("5. Testing condition-based loop:")
count = 3
for count > 0:
    print("Countdown:")
    print(count)
    count = count - 1

print("=== CONTROL FLOW TEST COMPLETED ===")
